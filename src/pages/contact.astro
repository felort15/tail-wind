---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us">
  <Header />
  <main class="container mx-auto p-4">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white transition-colors mb-8">Contact Us</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Contact Information -->
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Get in Touch</h2>
        <div class="space-y-4">
          <div class="flex items-center">
            <i class="fas fa-phone text-blue-500 text-xl w-8"></i>
            <div>
              <p class="text-gray-600 dark:text-gray-300">Phone</p>
              <a href="tel:+1234567890" class="text-blue-500 hover:text-blue-600 dark:hover:text-blue-400">+1 (234) 567-890</a>
            </div>
          </div>
          <div class="flex items-center">
            <i class="fas fa-envelope text-blue-500 text-xl w-8"></i>
            <div>
              <p class="text-gray-600 dark:text-gray-300">Email</p>
              <a href="mailto:contact@example.com" class="text-blue-500 hover:text-blue-600 dark:hover:text-blue-400">contact@example.com</a>
            </div>
          </div>
          <div class="flex items-center">
            <i class="fas fa-location-dot text-blue-500 text-xl w-8"></i>
            <div>
              <p class="text-gray-600 dark:text-gray-300">Address</p>
              <p class="text-gray-800 dark:text-gray-200">123 Business Street<br/>City, State 12345</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Send us a Message</h2>
        <form class="space-y-4">
          <div>
            <label class="block text-gray-700 dark:text-gray-300 mb-2" for="name">Name</label>
            <input type="text" id="name" class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="Your name">
          </div>
          <div>
            <label class="block text-gray-700 dark:text-gray-300 mb-2" for="email">Email</label>
            <input type="email" id="email" class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="your@email.com">
          </div>
          <div>
            <label class="block text-gray-700 dark:text-gray-300 mb-2" for="message">Message</label>
            <textarea id="message" rows="4" class="w-full px-4 py-2 rounded-lg border dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="Your message"></textarea>
          </div>
          <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition-colors">Send Message</button>
        </form>
      </div>
    </div>
  </main>
  <Footer />
</Layout> 
